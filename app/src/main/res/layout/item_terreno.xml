<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20px"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:padding="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350px"
                    android:gravity="center"
                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="20px"

                            >
                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre:"
                                android:layout_marginRight="20px"

                                />

                            <TextView
                                android:id="@+id/itemNameTe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pintag" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20px"
                            >
                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area:"


                                android:layout_marginRight="20px"
                                />

                            <TextView
                                android:id="@+id/itemarea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1234" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Numero de marcadores:"
                            android:layout_marginRight="20px"
                            />

                        <TextView
                            android:id="@+id/itemMarcadores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/eliminarTerrenoBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10px"
                        android:layout_marginVertical="20px"
                        android:backgroundTint="#F44336"
                        android:text="ELIMINAR"
                        android:textSize="30px">

                    </Button>

                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>